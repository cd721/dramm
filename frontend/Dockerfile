FROM node:20 as build

WORKDIR /usr/src/app

COPY package*.json ./
RUN npm install

ARG VITE_FIREBASE_KEY
ARG VITE_FIREBASE_DOMAIN
ARG VITE_FIREBASE_PROJECT_ID
ARG VITE_FIREBASE_STORAGE_BUCKET
ARG VITE_FIREBASE_SENDER_ID
ARG VITE_FIREBASE_APP_ID
ARG VITE_YELP_API_KEY
ARG VITE_WEATHER_API_KEY
ARG VITE_API_URL

ENV VITE_FIREBASE_KEY=${VITE_FIREBASE_KEY}
ENV VITE_FIREBASE_DOMAIN=${VITE_FIREBASE_DOMAIN}
ENV VITE_FIREBASE_PROJECT_ID=${VITE_FIREBASE_PROJECT_ID}
ENV VITE_FIREBASE_STORAGE_BUCKET=${VITE_FIREBASE_STORAGE_BUCKET}
ENV VITE_FIREBASE_SENDER_ID=${VITE_FIREBASE_SENDER_ID}
ENV VITE_FIREBASE_APP_ID=${VITE_FIREBASE_APP_ID}
ENV VITE_YELP_API_KEY=${VITE_YELP_API_KEY}
ENV VITE_WEATHER_API_KEY=${VITE_WEATHER_API_KEY}
ENV VITE_API_URL=${VITE_API_URL}

COPY . .
RUN npm run build

FROM nginx:stable-alpine

COPY --from=build /usr/src/app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
